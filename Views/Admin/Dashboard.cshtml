

@{
    ViewBag.Title = "Dashboard";

}

<link rel="stylesheet" href="~/Content/Style2.css" />
<style>
   
    .user-view{
        margin:0 10px;
    }
</style>

<div class="container">
    <div class="col-md-4 mb-4 stretch-card transparent">
        <div class="card card-tale">
            <div class="card-body">
                <p class="mb-4" style="font-size:20px;font-weight:bold;">Orders</p>
                <p class="fs-30 mb-2">@ViewBag.orders</p>
                @*           <p>10.00% (30 days)</p>*@

            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4 stretch-card transparent">
        <div class="card card-dark-blue">
            <div class="card-body">
                <p class="mb-4" style="font-size:20px;font-weight:bold;">Total Products</p>
                <p class="fs-30 mb-2">@ViewBag.totalProduct</p>
                @* <p>22.00% (30 days)</p>*@
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4 stretch-card transparent">
        <div class="card card-dark-blue">
            <div class="card-body">
                <p class="mb-4" style="font-size:20px;font-weight:bold;">No. of Admins</p>
                <p class="fs-30 mb-2">@ViewBag.admins</p>
                @* <p>22.00% (30 days)</p>*@
            </div>
        </div>
    </div>




</div>
<div class="container container2">
    <h3>Customer Navigation</h3>
</div>
<div class="container" style="margin-top:10px;">
    <div class="user-view">

        <a href="/Home/Index" class="btn btn-primary">Home</a>


    </div>
    <div class="user-view">

        <a href="/Home/OurProducts" class="btn btn-primary">Our Products</a>


    </div>
    <div class="user-view">

        <a href="#" class="btn btn-primary">Contact</a>


    </div>
    <div class="user-view">

        <a href="#" class="btn btn-primary">About</a>


    </div>


</div>