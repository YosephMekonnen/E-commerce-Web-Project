@model List<E_commerce_Web_Project.DB.Product>

@{
    ViewBag.Title = "Index";

}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


</head>

<body>
    
   
    <div class="slideshow-container">

       
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="~/ExternalImg/Speaker-Banner.jpg">



            <div class="overlay">

            </div>
            <div class="text">
                <h1>Speaker</h1>
            </div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img  src="~/ExternalImg/iphone-13-pro-banner.jpg">
            <div class="overlay">

            </div>
            <div class="text">
                <h1>IPhone 13 Pro</h1>
            </div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="~/ExternalImg/S21.jpg">
            <div class="overlay">

            </div>
            <div class="text">
                <h1>Samsung Galaxy S21</h1>
            </div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
        <div style="text-align:center" class="dots">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
    </div>
    <br>


    


    @*DATABASE PRODUCTS*@
    <div class="product">
        <div class="product-header">
            <h1>Trending Products</h1>
        </div>
        <div class="products-items">
            @foreach (var items in Model)
            {
                if (items.IsTrending == true)
                {
                    <div class="item-1">
                        <img src="~/ProductImg/@items.ProductImage"
                             alt="" height="276">
                        <h3>@items.ProductName</h3>
                        @{
                            if (items.IsActive == true)
                            {


                                <p>Is Active</p>
                            }
                            else
                            {
                                <p>Not Acitve</p>
                            }
                        }
                        <p style="color:grey;">@items.ProductDetails</p>
                        <p class="price">$@items.Price</p>
                        @if (items.Stock > 0)
                        {

                       <a href="@Url.Action("AddtoCart","Home",new {productId=items.ProductId })"  name="AddToCart" itemid="@items.ProductId">Buy Now</a>

                    }
                    else
                    {
                        <p>Out of Stock</p>
                    }
                    </div>
                }


            }

        </div>

    </div>
    
    <div class="product">
        <div class="product-header">
            <h1>Featured Products</h1>
        </div>
        <div class="products-items">
            @foreach (var items in Model)
            {
                if (items.IsFeatured == true)
                {

            <div class="item-1">
                <img src="~/ProductImg/@items.ProductImage"
                     alt="" height="276">
                <h3>@items.ProductName</h3>
                @{
                    if (items.IsActive == true)
                    {


                        <p>Is Active</p>
                    }
                    else
                    {
                        <p>Not Acitve</p>
                    }
                }
              @*  <p style="color:grey;">@items.Category.CategoryName</p>*@
                <p class="price">$@items.Price</p>
                @if (items.Stock > 0)
                {

                    <a href="@Url.Action("AddtoCart", "Home", new { productId = items.ProductId })" name="AddToCart">Buy Now</a>

                }
                else
                {
                    <p>Out of Stock</p>
                }
            </div>



                        }
                    }
        </div>

    </div>


    @{ 
        Html.RenderPartial("Brands");
    }

    @{
        Html.RenderPartial("News");
    }
    @{ 
        Html.RenderPartial("About");
    }


   <script src="~/Scripts/Cart.js"></script>
    <script src="~/Scripts/Custom.js"></script>
</body>

</html>

