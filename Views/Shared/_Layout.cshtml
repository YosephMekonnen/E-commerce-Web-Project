@using E_commerce_Web_Project.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*    @Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

     <link href="~/Content/MyLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
          integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
</head>
<body>
    <nav>
        <div class="logo">
            <a href="#"><h1>Online Shop</h1></a>
        </div>
        <div class="links coll" id="collapse">
            <a href="/Home/Index">Home</a>
            <a href="#news">News</a>
            <a href="/Home/OurProduct">Our Products</a>
            <a href="#about-container">About</a>
            <a href="#contact">Contact</a>

        </div>

       
        <div class="container-nav">
            <ul class="navbar-right">
                <div class="cart">
                    <a href="#" id="cart"><i class="fas fa-cart-plus"></i>@*@<span>3</span>*@</a>
                    <span class="open" onclick="openNav()"><i class="fas fa-bars"></i></span>
                </div>

                <div class="container" id="drop-container">
                    <div class="shopping-cart">
                        <div class="shopping-cart-header">
                           <span class="badge"><i id="close" style="cursor:pointer;" class="fas fa-times"></i></span>
                            <div class="shopping-cart-total">
                                <span class="lighter-text">Total:</span>
                           
                                <span class="main-color-text">@Session["total"] Birr</span>
                            </div>
                        </div> <!--end shopping-cart-header -->

                        <ul class="shopping-cart-items">
                         
                            @if (Session["cart"] != null)
                            {

                                foreach (var items in (List<Item>)Session["cart"])
                                {

                                    // var result = items.Product.Price * items.Stock;
                                    <li class="clearfix">
                                        <a href="@Url.Action("RemovefromCart","Home",new {productId=items.Product.ProductId})"><i class="fa fa-times" style="float:right;"></i></a>
                                        <img src="~/ProductImg/@items.Product.ProductImage" alt="item1" />
                                        <span class="item-name">@items.Product.ProductName</span>
                                        <span class="item-price">@items.Product.Price</span>
                                        <span class="item-quantity">@items.Stock</span>
                                    </li>
                                }

                            }

                        </ul>

                        <a href="@Url.Action("Checkout","Home")" class="button">Checkout</a>
                    </div> 
                </div>


            </ul>


        </div>




        <div id="mySidenav" class="sidenav">
          
            <div class="side-nav-items">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a class="link-1" href="/Home/Index">Home</a>
                <a class="link-1" href="/Home/OurProduct">Our Products</a>
                <a class="link-1" href="/Home/About">About</a>
                <a class="link-1" href="#">Contact</a>
            </div>
        </div>

    </nav>




    @RenderBody()

    <footer>
        <div class="footer-items">
            <div class="footer-title">
                <h1>Online shop</h1>
            </div>
            <div class="social-links">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-telegram"></i></a>

            </div>

        </div>
    </footer>



    
    <script src="~/Scripts/Custom.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
